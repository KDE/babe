{
    "manifest_version": 2,

    "name": "Babe",
    "description": "This extension connects YouTube to Babe",
    "version": "1.0",

    "browser_action":
    {
        "default_icon": "icon_1.png",
        "default_popup": "popup.html"
    },
    "permissions": [ "activeTab" ],
    "applications":
    {
        "gecko": 
        {
            "id": "babe@babe.org"
        }
    }
}
